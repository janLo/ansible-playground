{% set site = item %}
server {
    listen 80;
    server_name {{ site.server_name }};
    return 301 https://$host$request_uri;
}

server {

    listen 443;
    server_name {{ site.server_name }};


{% include "common_ssl.j2" %}

    access_log            /var/log/nginx/{{ site.server_name }}.access.log;
    error_log            /var/log/nginx/{{ site.server_name }}.error.log;

    location / {

	proxy_set_header        Host $host;
	proxy_set_header        X-Real-IP $remote_addr;
	proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
	proxy_set_header        X-Forwarded-Proto $scheme;

	# Fix the â€œIt appears that your reverse proxy set up is broken" error.
	proxy_pass          http://{{ site.target.host }}:{{ site.target.port }};
	proxy_read_timeout  90;

	proxy_redirect      http://{{ site.target.host }}:{{ site.target.port }} https://{{ site.server_name }};
    }
}
