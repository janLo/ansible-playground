{% set site = item %}
server {
    listen 80;
    server_name {{ site.server_name }};
    return 301 https://$host$request_uri;
}

server {

    listen 443;
    server_name {{ site.server_name }};

    ssl_certificate           /etc/nginx/certs/{{ site.server_name }}.crt;
    ssl_certificate_key       /etc/nginx/certs/{{ site.server_name }}.key;

    ssl on;

    ssl_session_cache  builtin:1000  shared:SSL:10m;
    ssl_protocols  TLSv1 TLSv1.1 TLSv1.2;

    # ssl_ciphers HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
    ssl_ciphers "EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH";
    ssl_prefer_server_ciphers on;

    access_log            /var/log/nginx/{{ site.server_name }}.access.log;
    error_log            /var/log/nginx/{{ site.server_name }}.error.log;

    root {{ webproxy.static }}/{{ site.content.name }};

    location / {
        index index.html;
    }

    {% for proxy in site.proxy %}
    location /caldav_server {
	proxy_set_header        Host $host;
	proxy_set_header        X-Real-IP $remote_addr;
	proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
	proxy_set_header        X-Forwarded-Proto $scheme;

	# Fix the â€œIt appears that your reverse proxy set up is broken" error.
	proxy_pass          http://{{ proxy.host }}:{{ proxy.port }};
	proxy_read_timeout  90;

	proxy_redirect      http://{{ proxy.host }}:{{ proxy.port }} https://{{ site.server_name }};
        
    }
    {% endfor %}
}

